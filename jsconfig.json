{
  "compilerOptions": {
    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
